# Convex Configuration
CONVEX_DEPLOYMENT=your-deployment-name
CONVEX_DEPLOYMENT_KEY=dev:deployment-name|your-deployment-key
CONVEX_URL=https://your-deployment-name.convex.cloud

# Groq API Key
GROQ_API_KEY=gsk_your-groq-api-key

# Docker Model Endpoint
# After deploying to Render/Railway/Fly.io, update with your public endpoint
DOCKER_MODEL_ENDPOINT=http://localhost:8000
# Example: DOCKER_MODEL_ENDPOINT=https://aicwd-model.render.com

# DBT Configuration
DBT_PROJECT_PATH=./dbt
DBT_PROFILES_DIR=./.dbt

# Database Connection (if using external database with DBT)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aicwd
DB_USER=postgres
DB_PASSWORD=your-password

# Vercel Configuration (for frontend)
VERCEL_URL=https://your-vercel-app.vercel.app

# Model Configuration
MODEL_PATH=/models/model.gguf
N_CTX=2048
N_THREADS=4
N_BATCH=512

# Red Team Configuration
RED_TEAM_PROMPT_COUNT=50
RED_TEAM_CONCURRENT_REQUESTS=5

# Alert Thresholds
COGNITIVE_WASTE_ALERT_THRESHOLD=2.5
SEMANTIC_DRIFT_ALERT_THRESHOLD=0.3
ADVERSARIAL_STRESS_ALERT_THRESHOLD=0.7
